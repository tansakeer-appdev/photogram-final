<div>
  <div>
    <h1>
      List of users
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <table border="1">
      <tr>
        <th>
          Username	
        </th>

        <th>
          Private?
        </th>

        <% if @current_user != nil %>

        <th>
          Fan
        </th>
        <% else %>
        <th> </th>

        <% end %>

        <th>
        </th>
      </tr>

      <% @list_of_users.each do |a_user| %>
      <tr>
        <td>
          <%= a_user.username %>
        </td>

        <td>
          <%= a_user.private %>
        </td>

        <% if @current_user != nil %>

        <td>
          <%= a_user.private %>
        </td>
        <% end %>
        <td>
          <a href="/users/<%= a_user.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
